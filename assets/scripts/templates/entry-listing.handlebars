{{#each entries as |entry|}}
  {{log entry}}
  <section data-id="{{entry.id}}">

<h6>Date: </h6>
<p>
  {{#if entry.date}}
    {{entry.date}}
  {{else}}
    No date entered.
  {{/if}}
</p>

<h6>Length of practice: </h6>
<p>
  {{#if entry.length_of_practice}}
    {{entry.length_of_practice}}
  {{else}}
    No length of practice entered.
  {{/if}}
</p>

<h6>Type of practice:</h6>
<p>
  {{#if entry.name_of_practice}}
    {{entry.name_of_practice}}
  {{else}}
    No style of practice entered.
  {{/if}}
</p>

<h6> Notes: </h6>
<p>
  {{#if entry.notes}}
    {{entry.notes}}
  {{else}}
    No notes entered.
  {{/if}}
</p>


  <button class="btn btn-secondary btn-lg update-entry">Edit</button>

  <form class="update-entry-form log d-none" id="entry-{{entry.id}}">
    <h2>Update entry</h2>
    <!-- <input class="form-control-lg" name="entry[id]" placeholder="{{entry.id}}" type="integer" /> -->
    <input class="form-control-lg date-edit" name="entry[date]" placeholder="Date" type="date" />
    <input class="form-control-lg length-edit" name="entry[length_of_practice]" placeholder="Practice" type="integer" />
    <input class="form-control-lg practice-edit" name="entry[name_of_practice]" placeholder="Name" type="string" />
    <input class="form-control-lg notes-edit" name="entry[notes]" placeholder="Notes" type="text" />
    <p class="update-message"></p>
    <button type="submit" class="btn btn-secondary btn-lg">Submit</button>
  </form>
  <button type="submit" class="btn btn-danger btn-lg delete-entry">Delete</button>
</section>
{{/each}}
