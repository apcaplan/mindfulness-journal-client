{{#each entries as |entry|}}
  <section data-id="{{entry.id}}">

<div class="container landing">
  <div class="row lg-6">
    <div class="col-6">
      <div class="p-3 shadow-lg rounded">
        <div class="pt-4">
          <h2 class="text-white ">Entry {{entry.id}}</h2>
        </div>
        <form class="mt-5 form-horizontal bucket" data-id="{{entry.id}}">
          <div class="form-group">
            <label class="control-label col-md-8 " for="date">Date:</label>
            <div class="col-sm-11">
              <p class="form-control-static handwritten" id="date-entry-{{entry.id}}">
                {{#if entry.date}}
                  {{entry.date}}
                {{else}}
                  No date entered.
                {{/if}}
              </p>
            </div>

            <label class="control-label col-md-8" for="length">Length of practice (in minutes):</label>
            <!-- <h6>Length of practice: </h6> -->
            <div class="col-sm-11">
              <p class="form-control-static handwritten" id="length-entry-{{entry.id}}">
                {{#if entry.length_of_practice}}
                  {{entry.length_of_practice}}
                {{else}}
                  No length of practice entered.
                {{/if}}
              </p>
            </div>

            <label class="control-label col-md-8" for="practice">Type of practice:</label>
            <div class="col-sm-11">
              <!-- <h6>Type of practice:</h6> -->
              <p class="form-control-static handwritten" id="practice-entry-{{entry.id}}">
                  {{#if entry.name_of_practice}}
                    {{entry.name_of_practice}}
                  {{else}}
                    No style of practice entered.
                  {{/if}}
              </p>
            </div>

            <label class="control-label col-md-8" for="notes">Notes:</label>
            <div class="col-sm-11">
              <p class="handwritten" id="notes-entry-{{entry.id}}">
                {{#if entry.notes}}
                  {{entry.notes}}
                {{else}}
                  No notes entered.
                {{/if}}
              </p>
              <p class="form-control-static"></p>
            </div>
          </div> <!--end form group-->
          <div class="update-delete">
            <p class="delete-message"></p>
          <button class="btn btn-secondary btn-lg update-entry">Edit</button>
          <button type="submit" class="btn btn-danger btn-lg delete-entry">Delete</button>
        </div> <!--end update-delete-->
      </form> <!--end form-->
    </div> <!--end shadow-->
  </div> <!--end column-->
</div> <!--end row-->
</div> <!--end landing container-->

  <form class="update-entry-form log d-none" id="entry-{{entry.id}}">
    <h2>Update entry</h2>
    <input class="form-control-lg date-edit" name="entry[date]" placeholder="Date" type="date" />
    <input class="form-control-lg length-edit" name="entry[length_of_practice]" placeholder="Length (in minutes)" type="integer" />
    <input class="form-control-lg practice-edit" name="entry[name_of_practice]" placeholder="Practice type" type="string" />
    <input class="form-control-lg notes-edit" name="entry[notes]" placeholder="Notes" type="text" />
    <p class="update-message"></p>
    <button type="submit" class="btn btn-secondary btn-lg">Submit</button>
  </form> <!--end update form-->
  <br>
  <br>
</section>
{{/each}}
